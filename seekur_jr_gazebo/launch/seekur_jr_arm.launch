<launch>
  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find seekur_jr_gazebo)/worlds/seekur_jr.world"/>
    <!-- more default parameters can be changed here -->
  </include>

  <!-- Convert an xacro and put on parameter server -->
  <param name="robot_description" command="$(find xacro)/xacro.py $(find seekur_jr_description)/robots/seekur_jr_with_arm.urdf.xacro" />

  <!-- Spawn a robot into Gazebo -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model seekur_jr" />
  
  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find seekur_jr_gazebo)/config/seekur_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="/seekur_jr" args="joint_state_controller shoulder_joint_position_controller forearm_joint_position_controller upper_arm_joint_position_controller wrist_pitch_joint_position_controller wrist_roll_joint_position_controller gripper_r_finger_joint_position_controller gripper_l_finger_joint_position_controller"/>
  
  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/seekur_jr/joint_states" />
  </node>
  
</launch>
